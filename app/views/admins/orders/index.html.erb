<div class="row" style= "width: 80%; margin: 20px auto;">
	<div class="form-horizontal">
		<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">注文一覧画面</h4>
	</div>
</div>

<div class="container">
	<div class="row" style= "width: 80%; margin: 20px auto;">
		<div class="outer">
			<table class="table table-striped">
				<thead class="thead-dark">
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<% @orders.each do |order| %>
				<tbody>
					<tr>
						<td><%= link_to(admins_order_path(order)) do %>
							<%= l order.created_at, format: :short %>
							<% end %>
						</td>
						<% sum = 0 %>
						<td><%= order.consumer.name %></td>
						<td><% order.order_products.each do |order_product| %>
							<% sum += order_product.quantity %>
							<% end %>
							<%= sum %>
						</td>
						<td><%= order.order_status_i18n %></td>
					</tr>
				</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>