<h1>農園詳細</h1>
<div class="row" style= "width: 80%; margin: 20px auto;">
	<div class="form-horizontal">
		<h4 style="margin-bottom: 20px; border-left: 2px solid #2D6F4C; padding: 10px;">詳細情報</h4>
	</div>
</div>

<div class="show-container" style="width:50%; margin: 20px auto;">
	<table class="table table-bordered">
		<tr>
			<th style=“background-color: #DAD7D7; border-bottom: 1px solid #fff;“>氏名</th>
			<th style=“background-color: #DAD7D7; border-bottom: 1px solid #fff;“>プロフィール画像</th>
			<td><%= @fermer.name %></td>
			<td>
				<% if @fermer.profile_image.present? %>
	     			<%= attachment_image_tag @fermer.profile_image, :image, :fill, 200, 200 %>
				<% else %>
					<%= image_tag 'no_image.jpg',size: '200*200'%>
				<% end %>
			</td>
		</tr>
		<tr>
			<th style=“background-color: #DAD7D7; border-bottom: 1px solid #fff;“>電話番号</th>
			<td><%= @fermer.phone %></td>
		</tr>
		<tr>
			<th style=“background-color: #DAD7D7; border-bottom: 1px solid #fff;“>メールアドレス</th>
			<td style=“border-bottom: 1px solid #DAD7D7;“><%= @fermer.email %></td>
		</tr>
	</table>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<%= link_to(consumers_columns_path(@fermer.id)) do %>
	          <button type="button" class="btn btn-success btn-lg btn-block">この農園の記事へ</button>
	        <% end %>
		</div>
		<div class="col-md-4">
			<%= link_to(consumers_products_path(@fermer.id)) do %>
	          <button type="button" class="btn btn-info btn-lg btn-block">この農園の商品へ</button>
	        <% end %>
		</div>

		<div class="col-md-4">
			<%= render partial: 'consumers/book_marks/book_mark_form', locals: { fermer: @fermer} %>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class= "col-md-12"style=" margin-top: 50px;">
			<div class="outer">
				<table  class="table table-striped">
					<thead class="thead-dark">
						<tr>
							<th>投稿者</th>
							<th>性別•年齢</th>
							<th>コメント日時</th>
							<th>評価</th>
							<th>星</th>
							<th>タイトル</th>
							<th>コメント</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody id="comments_area">
								<%= render partial: 'consumers/fermer_reviews/index', locals: { reviews: @reviews, fermer: @fermer  } %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="cpl-md-10">
			<div>
				<% if consumer_signed_in? %>
				<%= render partial: 'consumers/fermer_reviews/form', locals: { review: @review, fermer: @fermer  } %>
				<% end %>
			</div>
		</div>
	</div>
</div>

